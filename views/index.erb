  <script>
    async function loadScores() {
      let res = await fetch('/api/highscores');
      let scores = await res.json();

      // Ordenar: niveles DESC, tiempo ASC
      scores.sort((a, b) => {
        if (b.levels !== a.levels) return b.levels - a.levels;
        return a.time - b.time;
      });

      let list = document.getElementById('scores');
      list.innerHTML = "";

      scores.forEach((s, index) => {
        let li = document.createElement('li');

        // Determinar medalla
        let medal = "";
        if (index === 0) medal = "ğŸ¥‡ ";
